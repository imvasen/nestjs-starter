{
  "collectCoverageFrom": ["src/*.(t|j)s", "src/**/*.(t|j)s"],
  "coverageDirectory": "<rootDir>/coverage",
  "coveragePathIgnorePatterns": [
    ".*\\.module\\.(t|j)s",
    "<rootDir>/src/(main)|(config)\\.ts",
    "<rootDir>/src/common/http\\.(filter)|(interceptor)\\.ts",
    "index.ts"
  ],
  "moduleFileExtensions": ["js", "json", "ts"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^unit/(.*)$": "<rootDir>/test/unit/$1"
  },
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": "\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
