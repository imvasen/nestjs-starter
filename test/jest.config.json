{
  "collectCoverageFrom": ["src/*.(t|j)s", "src/**/*.(t|j)s"],
  "coverageDirectory": "<rootDir>/coverage",
  "coveragePathIgnorePatterns": [
    ".*\\.module\\.(t|j)s",
    "<rootDir>/src/(main)|(config)\\.ts"
  ],
  "moduleFileExtensions": ["js", "json", "ts"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": "\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
